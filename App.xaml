<Application x:Class="DerivSmartBotDesktop.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:DerivSmartBotDesktop.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Light.xaml"/>
                <ResourceDictionary Source="Styles/Controls.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:BoolToTextConnectedConverter x:Key="BoolToText_Connected" />
            <conv:BoolToTextBotConverter x:Key="BoolToText_Bot" />
            <conv:BoolInverseConverter x:Key="BoolInverseConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
