<Window x:Class="DerivSmartBotDesktop.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deriv Smart Bot Settings"
        Height="220" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- App ID -->
        <TextBlock Text="App ID:" Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox x:Name="AppIdTextBox" Grid.Row="0" Grid.Column="1"
                 Margin="0,0,0,5"/>

        <!-- API Token -->
        <TextBlock Text="API Token:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,5,5"/>
        <PasswordBox x:Name="ApiTokenBox" Grid.Row="1" Grid.Column="1"
                     Margin="0,0,0,5"/>

        <!-- Symbol -->
        <TextBlock Text="Symbol:" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center" Margin="0,0,5,5"/>
        <TextBox x:Name="SymbolTextBox" Grid.Row="2" Grid.Column="1"
                 Margin="0,0,0,5"/>

        <!-- Info -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                   TextWrapping="Wrap"
                   Foreground="Gray"
                   Margin="0,5,0,5"
                   Text="Enter your Deriv App ID, API token, and the symbol to trade (e.g., R_100, R_50, etc.)."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,5,0,0">
            <Button Content="OK" Width="80" Margin="0,0,5,0"
                    IsDefault="True"
                    Click="Ok_Click"/>
            <Button Content="Cancel" Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
