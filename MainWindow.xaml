<Window x:Class="DerivSmartBotDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DerivSmartBotDesktop"
        xmlns:conv="clr-namespace:DerivSmartBotDesktop.Converters"
        Title="Deriv Smart Bot"
        Height="760"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource ShellBackgroundBrush}">
    <Window.Resources>
        <conv:BoolToTextConnectedConverter x:Key="BoolToText_Connected" />
        <conv:BoolToTextBotConverter x:Key="BoolToText_Bot" />

        <LinearGradientBrush x:Key="ShellBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#121720" Offset="0" />
            <GradientStop Color="#19212C" Offset="0.6" />
            <GradientStop Color="#141A24" Offset="1" />
        </LinearGradientBrush>
        <SolidColorBrush x:Key="PanelBrush" Color="#1B2430"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#2A3646"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#1A222D"/>
        <SolidColorBrush x:Key="BadgeBrush" Color="#202B38"/>
        <SolidColorBrush x:Key="BadgeBorderBrush" Color="#2C3A4B"/>
        <SolidColorBrush x:Key="InputBackgroundBrush" Color="#161E2A"/>
        <SolidColorBrush x:Key="TableRowBrush" Color="#17212C"/>
        <SolidColorBrush x:Key="TableHeaderBrush" Color="#15202B"/>
        <SolidColorBrush x:Key="LogBackgroundBrush" Color="#151E2A"/>
        <SolidColorBrush x:Key="ButtonBrush" Color="#223142"/>
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="#2A3646"/>

        <SolidColorBrush x:Key="AccentBrush" Color="#63B8A4"/>
        <SolidColorBrush x:Key="AccentSoftBrush" Color="#223235"/>
        <SolidColorBrush x:Key="PositiveBrush" Color="#7AD4A6"/>
        <SolidColorBrush x:Key="NegativeBrush" Color="#E38B8B"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E7EDF5"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#B7C3D1"/>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <DockPanel>
                                <Border DockPanel.Dock="Top"
                                        Background="{DynamicResource HeaderBrush}"
                                        CornerRadius="10,10,0,0"
                                        Padding="10,6">
                                    <ContentPresenter ContentSource="Header"
                                                      RecognizesAccessKey="True"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Center" />
                                </Border>
                                <Border Padding="{TemplateBinding Padding}">
                                    <ContentPresenter />
                                </Border>
                            </DockPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="KpiCard" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PanelBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="{DynamicResource ButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="#0B0F14"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
        </Style>

        <Style x:Key="GhostButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="{DynamicResource AccentSoftBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#34171B"/>
            <Setter Property="Foreground" Value="#FCA5A5"/>
            <Setter Property="BorderBrush" Value="#4B1E24"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="{DynamicResource TableRowBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource TableHeaderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <DockPanel Background="{DynamicResource ShellBackgroundBrush}" Margin="12">
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource HeaderBrush}"
                CornerRadius="12"
                BorderBrush="{DynamicResource PanelBorderBrush}"
                BorderThickness="1"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="0">
                    <TextBlock Text="Deriv Smart Bot"
                               FontSize="22"
                               FontWeight="Bold"
                               Margin="0,0,12,0"/>

                    <Border CornerRadius="999"
                            Padding="10,4"
                            Background="{DynamicResource BadgeBrush}"
                            BorderBrush="{DynamicResource BadgeBorderBrush}"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#6B7280"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                <Setter Property="Fill" Value="{DynamicResource PositiveBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding IsConnected, Converter={StaticResource BoolToText_Connected}}"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="999"
                            Padding="10,4"
                            Margin="8,0,0,0"
                            Background="{DynamicResource BadgeBrush}"
                            BorderBrush="{DynamicResource BadgeBorderBrush}"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Fill" Value="#6B7280"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                <Setter Property="Fill" Value="{DynamicResource AccentBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <TextBlock Text="{Binding IsRunning, Converter={StaticResource BoolToText_Bot}}"
                                       FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border CornerRadius="999"
                            Padding="10,4"
                            Margin="8,0,0,0"
                            Background="{DynamicResource BadgeBrush}"
                            BorderBrush="{DynamicResource BadgeBorderBrush}"
                            BorderThickness="1">
                        <TextBlock Text="{Binding ActiveSymbol, StringFormat=Symbol: {0}}"
                                   FontSize="12"/>
                    </Border>

                </StackPanel>

                <TextBlock Grid.Row="1"
                           Text="{Binding StatusText}"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0"/>

                <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Light theme"
                              Foreground="{DynamicResource TextSecondaryBrush}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0"
                              Checked="LightTheme_Checked"
                              Unchecked="LightTheme_Unchecked"/>
                    <Button Content="Settings"
                            Style="{StaticResource GhostButton}"
                            Click="Settings_Click"
                            Margin="0,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" Grid.RowSpan="3">
                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock Text="Session" FontWeight="SemiBold"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Button Content="Start" Style="{StaticResource PrimaryButton}" Width="80" Margin="0,0,6,0" Click="StartBot_Click"/>
                            <Button Content="Stop" Style="{StaticResource DangerButton}" Width="80" Margin="0,0,6,0" Click="StopBot_Click"/>
                            <Button Content="Clear Pause" Style="{StaticResource GhostButton}" Width="100" Click="ClearAutoPause_Click"/>
                        </StackPanel>

                        <Expander Header="Session details" IsExpanded="False">
                            <StackPanel Margin="0,6,0,0">
                                <TextBlock Text="Auto-pause" Style="{StaticResource LabelText}"/>
                                <TextBlock Text="{Binding AutoPauseReasonText}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,8"/>

                                <TextBlock Text="Last block" Style="{StaticResource LabelText}"/>
                                <TextBlock Text="{Binding LastSkipReason}"
                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </GroupBox>

                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock Text="Profile" FontWeight="SemiBold"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <TextBlock Text="Profile selection" Style="{StaticResource LabelText}"/>
                        <ComboBox ItemsSource="{Binding Profiles}"
                                  SelectedItem="{Binding SelectedProfile}"
                                  Margin="0,4,0,10"/>

                        <TextBlock Text="Risk summary" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="{Binding RulesSummary}"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox>
                    <GroupBox.Header>
                        <TextBlock Text="Controls" FontWeight="SemiBold"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <CheckBox Content="Auto-start when conditions are good"
                                  IsChecked="{Binding AutoStartEnabled}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,6"/>
                        <CheckBox Content="Auto symbol rotation"
                                  IsChecked="{Binding AutoSymbolRotationEnabled}"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  Margin="0,0,0,6"/>
                        <Expander Header="Symbols &amp; filters" IsExpanded="False" Margin="0,4,0,0">
                            <StackPanel Margin="0,6,0,0">
                                <TextBlock Text="Watchlist" Style="{StaticResource LabelText}"/>
                                <TextBox Text="{Binding WatchlistText, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,4,0,6"
                                         ToolTip="Comma-separated symbols e.g. R_50,R_75,R_100"/>
                                <Button Content="Apply watchlist" Style="{StaticResource GhostButton}" Click="ApplyWatchlist_Click"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <Grid Grid.Column="1" Grid.Row="0" Margin="12,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource KpiCard}" Margin="0,0,12,12">
                    <StackPanel>
                        <TextBlock Text="Balance" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="{Binding Balance, StringFormat={}{0:F2}}" Style="{StaticResource ValueText}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource KpiCard}" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Session P/L" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="{Binding TodaysPL, StringFormat={}{0:F2}}" Style="{StaticResource ValueText}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource KpiCard}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Win rate" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="{Binding WinRate, StringFormat={}{0:F1}%}" Style="{StaticResource ValueText}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource KpiCard}">
                    <StackPanel>
                        <TextBlock Text="Trades" Style="{StaticResource LabelText}"/>
                        <TextBlock Text="{Binding TodaysTrades}" Style="{StaticResource ValueText}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <TabControl Grid.Column="1" Grid.Row="1" Margin="12,0,0,0" Background="{DynamicResource PanelBrush}" BorderBrush="{DynamicResource PanelBorderBrush}">
                <TabItem Header="Performance">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Margin="0,0,0,10">
                            <GroupBox.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Strategy performance" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ActiveStrategyName}"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="8,0,0,0"/>
                                </StackPanel>
                            </GroupBox.Header>
                            <DataGrid ItemsSource="{Binding StrategySummaries}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      RowHeaderWidth="0"
                                      Margin="0,4,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Strategy" Binding="{Binding Name}" Width="*"/>
                                    <DataGridTextColumn Header="Win rate (%)" Binding="{Binding WinRate, StringFormat={}{0:F1}}" Width="120"/>
                                    <DataGridTextColumn Header="Trades" Binding="{Binding TotalTrades}" Width="80"/>
                                    <DataGridTextColumn Header="Net P/L" Binding="{Binding NetPL, StringFormat={}{0:F2}}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <GroupBox Grid.Row="1">
                            <GroupBox.Header>
                                <TextBlock Text="Recent trades" FontWeight="SemiBold"/>
                            </GroupBox.Header>
                            <DataGrid ItemsSource="{Binding TradeHistory}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      RowHeaderWidth="0"
                                      Margin="0,4,0,0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Time, StringFormat={}{0:HH:mm:ss}}" Width="90"/>
                                    <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="90"/>
                                    <DataGridTextColumn Header="Strategy" Binding="{Binding StrategyName}" Width="*"/>
                                    <DataGridTextColumn Header="Dir" Binding="{Binding Direction}" Width="50"/>
                                    <DataGridTextColumn Header="Stake" Binding="{Binding Stake, StringFormat={}{0:F2}}" Width="80"/>
                                    <DataGridTextColumn Header="P/L" Binding="{Binding Profit, StringFormat={}{0:F2}}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Market">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <GroupBox Grid.Row="0" Margin="0,0,0,10">
                            <GroupBox.Header>
                                <TextBlock Text="Per-symbol stats" FontWeight="SemiBold"/>
                            </GroupBox.Header>
                            <DataGrid ItemsSource="{Binding SymbolStats}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="None"
                                      Margin="0,4,0,0"
                                      RowHeaderWidth="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Symbol" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="Heat" Binding="{Binding Heat, StringFormat={}{0:F1}}" Width="60"/>
                                    <DataGridTextColumn Header="Regime" Binding="{Binding Regime}" Width="*"/>
                                    <DataGridTextColumn Header="Win%" Binding="{Binding WinRate, StringFormat={}{0:F1}}" Width="60"/>
                                    <DataGridTextColumn Header="Trades" Binding="{Binding TotalTrades}" Width="70"/>
                                    <DataGridTextColumn Header="P/L" Binding="{Binding NetPL, StringFormat={}{0:F2}}" Width="90"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                    </Grid>
                </TabItem>
            </TabControl>

            <Expander Grid.Column="1" Grid.Row="2" Header="Session log" IsExpanded="False" Margin="12,12,0,0">
                <Border Background="{DynamicResource LogBackgroundBrush}" BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1" CornerRadius="10" Padding="6">
                    <TextBox x:Name="LogTextBox"
                             Text="{Binding CombinedLog, Mode=OneWay}"
                             IsReadOnly="True"
                             FontFamily="Consolas"
                             FontSize="12"
                             VerticalScrollBarVisibility="Visible"
                             HorizontalScrollBarVisibility="Auto"
                             MaxHeight="220"
                             TextWrapping="NoWrap"
                             Background="{DynamicResource LogBackgroundBrush}"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             BorderThickness="0"
                             AcceptsReturn="True"
                             TextChanged="LogTextBox_TextChanged"/>
                </Border>
            </Expander>
        </Grid>
    </DockPanel>
</Window>

