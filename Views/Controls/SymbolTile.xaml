<UserControl x:Class="DerivSmartBotDesktop.Views.Controls.SymbolTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardBorderStyle}" Padding="10">
        <StackPanel>
            <TextBlock Text="{Binding Symbol, RelativeSource={RelativeSource AncestorType=UserControl}}" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Regime, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat=Regime: {0}}"
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10"/>
            <TextBlock Text="{Binding Heat, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat=Heat: {0:0.0}}"
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10" Margin="0,4,0,0"/>
            <TextBlock Text="{Binding WinRate, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat=Win: {0:0.0}%}"
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10"/>
            <TextBlock Text="{Binding Volatility, RelativeSource={RelativeSource AncestorType=UserControl}, StringFormat=Vol: {0:0.00}}"
                       Foreground="{DynamicResource TextSecondaryBrush}" FontSize="10"/>
            <TextBlock Text="{Binding LastSignal, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Foreground="{DynamicResource TextMutedBrush}" FontSize="10"/>
        </StackPanel>
    </Border>
</UserControl>
