<UserControl x:Class="DerivSmartBotDesktop.Views.Controls.StatusBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="999" Padding="10,4"
            Background="Transparent"
            BorderBrush="{DynamicResource PanelBorderBrush}" BorderThickness="1">
        <StackPanel Orientation="Horizontal">
            <Ellipse Width="8" Height="8" Margin="0,0,6,0"
                     Fill="{Binding IndicatorBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="11"/>
        </StackPanel>
    </Border>
</UserControl>
